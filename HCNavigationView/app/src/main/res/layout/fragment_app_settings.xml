<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_material_dark"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social"
        android:textSize="@dimen/settings_category_text_size"
        android:textColor="@color/settings_category_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/settings_divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="-2dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect to Facebook"
                android:textSize="@dimen/settings_option_text_size"
                android:textColor="@color/settings_option_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect this app to your profile to share photos and achievements."
                android:textColor="@color/settings_description_color"
                android:textSize="@dimen/settings_description_text_size"
                android:layout_marginBottom="10dp"
                android:padding="2dp"/>
        </LinearLayout>

        <com.bradenhart.hcnavigationview.toggle.RoundToggleButton
            xmlns:widget="http://schemas.android.com/apk/res-auto"
            android:id="@+id/settings_social_facebook_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            widget:prefName="connectToFacebook"
            android:layout_gravity="center_vertical"
            android:padding="0dp"/>


    </LinearLayout>

</LinearLayout>