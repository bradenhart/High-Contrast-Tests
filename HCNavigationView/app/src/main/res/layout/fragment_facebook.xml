<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/fb_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fb_profile_picture"
        android:layout_width="@dimen/profile_picture_circle_diameter"
        android:layout_height="@dimen/profile_picture_circle_diameter"
        android:layout_below="@id/fb_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_person_white_48dp"
        app:border_color="@color/accent"
        app:border_width="2dp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fb_profile_picture"
        android:layout_marginTop="30dp"/>

</RelativeLayout>