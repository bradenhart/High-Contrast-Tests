<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/challenges_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE" />

    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:visibility="gone"/>

    <include
        android:id="@+id/filter_card"
        layout="@layout/filter_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/filter_card_left_margin"
        android:layout_marginRight="@dimen/filter_card_right_margin"
        android:layout_marginTop="@dimen/filter_card_top_margin"
        android:layout_marginBottom="@dimen/filter_card_bottom_margin"/>

</FrameLayout>