<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="0dp"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/item_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:padding="2dp"
            android:text="Title"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_light"/>

        <TextView
            android:id="@+id/item_textview"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title_textview"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:singleLine="true"
            android:text="Description" />

        <TextView
            android:id="@+id/random_red_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:drawableTop="@drawable/ic_radio_button_unchecked_black_24dp"
            android:gravity="center"
            android:text="done"
            android:textSize="10sp"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/random_red_view"
            android:drawableTop="@drawable/ic_person_black_24dp"
            android:gravity="center"
            android:text="1/2"
            android:textSize="10sp"
            android:padding="2dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>