<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="?android:actionBarSize"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/challenge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/challenge_title_placeholder"
                android:textAppearance="?attr/textAppearanceSearchResultTitle" />

            <TextView
                android:id="@+id/challenge_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="25dp"
                android:text="@string/lorem_ipsum" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <TextView
                android:id="@+id/challenge_difficulty_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Insane"
                android:textSize="18sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/challenge_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/challenge_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="2"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fab_diameter"
            android:layout_gravity="bottom"
            android:background="#34495e"
            android:gravity="center_vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|start">

                <TextView
                    android:id="@+id/random_challenge_btn"
                    style="@style/ChallengeLeftOptionsStyle"
                    android:drawableTop="@drawable/ic_shuffle_white_24dp"
                    android:text="random" />

                <TextView
                    android:id="@+id/skip_challenge_btn"
                    style="@style/ChallengeLeftOptionsStyle"
                    android:drawableTop="@drawable/ic_keyboard_arrow_right_white_24dp"
                    android:text="skip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|end">

                <TextView
                    android:id="@+id/all_challenges_button"
                    style="@style/ChallengeRightOptionsStyle"
                    android:drawableTop="@drawable/ic_view_list_white_24dp"
                    android:text="challenges" />

                <TextView
                    android:id="@+id/challenge_settings_button"
                    style="@style/ChallengeRightOptionsStyle"
                    android:drawableTop="@drawable/ic_settings_white_24dp"
                    android:text="settings" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/game_settings_popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/fab_diameter"
            android:layout_marginRight="25dp"
            android:background="@color/tabGrey"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/difficulty_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_drop_down_white_24dp" />

            <ImageView
                android:id="@+id/difficulty_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/difficulty_down"
                android:padding="5dp"
                android:src="@drawable/ic_fitness_center_white_24dp" />

            <ImageView
                android:id="@+id/difficulty_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/difficulty_icon"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_drop_up_white_24dp" />

            <ImageView
                android:id="@+id/group_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/difficulty_down"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_drop_down_white_24dp" />

            <ImageView
                android:id="@+id/group_size_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/difficulty_icon"
                android:layout_toRightOf="@id/group_down"
                android:padding="5dp"
                android:src="@drawable/ic_group_white_24dp" />

            <ImageView
                android:id="@+id/group_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/difficulty_up"
                android:layout_toRightOf="@id/group_size_icon"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_drop_up_white_24dp" />
        </RelativeLayout>

        <View
            android:id="@+id/download_screen_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/challenge_download_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:actionBarSize"
            android:background="@color/loadingBackground"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_sync_white_48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/download_icon"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Initialising app, please wait..."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </RelativeLayout>

        <!--<com.melnykov.fab.FloatingActionButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom|center_horizontal"-->
        <!--android:layout_marginBottom="28dp"/>-->

    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>