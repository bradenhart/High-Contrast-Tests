<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp"
    android:visibility="visible">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="0dp"
       android:layout_marginBottom="5dp"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/filter_card_header"
           style="@style/Base.TextAppearance.AppCompat.Body1"
           android:textSize="18sp"
           android:padding="5dp"
           android:gravity="center"/>

       <Button
           android:id="@+id/filter_by_newest"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="?android:attr/borderlessButtonStyle"
           android:text="@string/filter_card_newest"
           android:textColor="@android:color/holo_blue_light"/>

       <Button
           android:id="@+id/filter_by_completed"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="?android:attr/borderlessButtonStyle"
           android:text="@string/filter_card_completed"
           android:textColor="@android:color/holo_blue_light"/>

       <Button
           android:id="@+id/filter_by_uncompleted"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="?android:attr/borderlessButtonStyle"
           android:text="@string/filter_card_uncompleted"
           android:textColor="@android:color/holo_blue_light"/>

       <Button
           android:id="@+id/filter_by_difficulty_eh"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="?android:attr/borderlessButtonStyle"
           android:text="@string/filter_card_difficulty_eh"
           android:textColor="@android:color/holo_blue_light"/>

       <Button
           android:id="@+id/filter_by_difficulty_he"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="?android:attr/borderlessButtonStyle"
           android:text="@string/filter_card_difficulty_he"
           android:textColor="@android:color/holo_blue_light"/>

   </LinearLayout>

</android.support.v7.widget.CardView>