<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:id="@+id/short_recycler_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/listPreferredItemHeightSmall"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/item_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:padding="2dp"
            android:text="Title"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_light"/>

        <TextView
            android:id="@+id/item_description_textview"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title_textview"
            android:layout_marginRight="100dp"
            android:gravity="center_vertical"
            android:padding="2dp"

            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed justo libero, semper id sem id, lacinia bibendum erat." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/recycler_item_small_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_person_black_24dp"
                android:gravity="center"
                android:text="1 - 2"
                android:textSize="10sp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/recycler_item_small_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_radio_button_checked_black_24dp"
                android:gravity="center"
                android:text=""
                android:textSize="10sp"
                android:padding="2dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_description_textview">
            <TextView
                android:id="@+id/item_min_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:padding="3dp"
                android:text="min: 1 player(s)"/>

            <TextView
                android:id="@+id/max_size_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:padding="3dp"
                android:text="max: 2 players"
                android:layout_below="@id/item_min_textview"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do it"
                android:layout_alignParentRight="true" />
        </RelativeLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>